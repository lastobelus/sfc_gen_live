<h2>{{ @title }}</h2>

<Form for={{@changeset}}
  change="validate"
  submit="save"
  opts={{ id: "<%= schema.singular %>-form" }}
>
<%= for {key, input, options} <- inputs, input do %>
  <Field name="<%= key %>">
    <Label><%= String.capitalize(to_string(key)) %></Label>
    <<%= input %><%= options %>/>
    <ErrorTag/>
  </Field>
<% end %>

  <Submit disable-with="Savingâ€¦" class={{@submit_class}}>Save</Submit>
</Form>
