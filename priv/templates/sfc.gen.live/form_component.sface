<Form for={@changeset}
  change="validate"
  submit="save"
  opts={ id: "<%= schema.singular %>-form" }
>
<%= for {key, input, options} <- inputs, input do %>
  <Field name="<%= key %>">
    <Label><%= String.capitalize(to_string(key)) %></Label>
    <<%= input %><%= options %>/>
    <ErrorTag/>
  </Field>
<% end %>

<div>  
  <Submit opts={ phx_disable_with: "Savingâ€¦" }>Save</Submit>
</div>
</Form>
